{
    "name": "Contest Alert",
    "description":"A CF contest alert system that will provide the list of upcoming contests and notify before the contests!",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/logo.png",
            "48": "images/logo.png",
            "128": "images/logo.png"
        }
    },
    "icons": {
        "16": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
    },
    "permissions": [
        "activeTab",
        "notifications"
    ]
}
